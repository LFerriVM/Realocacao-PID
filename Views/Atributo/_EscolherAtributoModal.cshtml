                                        <option class="select_dist_10" value="10">10</option>
                                        <option class="select_dist_12" value="12">12</option>
                                        <option class="select_dist_13" value="13">13</option>
                                        <option class="select_dist_14" value="14">14</option>
                                        <option class="select_dist_15" value="15">15</option>
                                    </select>
                                    <span asp-validation-for=@Model.Inteligencia></span>
                                </div>

                                <div class="m-auto text-center">
                                    <p class="lead">Sabedoria</p>
                                    <select onclick="atributos(this)" class="form-select w-25 m-auto select_dist" asp-for="@Model.Sabedoria">
                                        <option value="">-</option>
                                        <option class="select_dist_8" value="8">8</option>
                                        <option class="select_dist_10" value="10">10</option>
                                        <option class="select_dist_12" value="12">12</option>
                                        <option class="select_dist_13" value="13">13</option>
                                        <option class="select_dist_14" value="14">14</option>
                                        <option class="select_dist_15" value="15">15</option>
                                    </select>
                                    <span asp-validation-for="@Model.Sabedoria"></span>
                                </div>

                                <div class="m-auto text-center">
                                    <p class="lead">Carisma</p>
                                    <select onclick="atributos(this)" class="form-select w-25 m-auto select_dist" asp-for="@Model.Carisma">
                                        <option value="">-</option>
                                        <option class="select_dist_8" value="8">8</option>
                                        <option class="select_dist_10" value="10">10</option>
                                        <option class="select_dist_12" value="12">12</option>
                                        <option class="select_dist_13" value="13">13</option>
                                        <option class="select_dist_14" value="14">14</option>
                                        <option class="select_dist_15" value="15">15</option>
                                    </select>
                                    <span asp-validation-for="@Model.Carisma"></span>
                                </div>
                            </div>
                            <br>
                        </div>

