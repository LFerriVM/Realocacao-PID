                    <div class="col m-auto text-center">
                        <button type="submit" class="btn btn-primary m-auto">Save</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="flushLocal()" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
