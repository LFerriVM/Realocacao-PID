                                    </div> *@
                        </div>

                        <div class="div_dist" id="div_distpadrao" style="visibility: hidden; display: none">
                            <div style="row col text-center">
                                <div class="m-auto text-center">
                                    <p class="lead">Força</p>
                                    <select onclick="atributos(this)" class="form-select w-25 m-auto select_dist" asp-for="@Model.Forca">
                                        <option value="">-</option>
                                        <option class="select_dist_8" value="8">8</option>
                                        <option class="select_dist_10" value="10">10</option>
                                        <option class="select_dist_12" value="12">12</option>
                                        <option class="select_dist_13" value="13">13</option>
                                        <option class="select_dist_14" value="14">14</option>
                                        <option class="select_dist_15" value="15">15</option>
                                    </select>
                                    <span asp-validation-for="@Model.Forca"></span>
                                </div>

                                <div class="m-auto text-center">
                                    <p class="lead">Destreza</p>
                                    <select onclick="atributos(this)" class="form-select w-25 m-auto select_dist" asp-for="@Model.Destreza">
                                        <option value="">-</option>
                                        <option class="select_dist_8" value="8">8</option>
                                        <option class="select_dist_10" value="10">10</option>
                                        <option class="select_dist_12" value="12">12</option>
                                        <option class="select_dist_13" value="13">13</option>
                                        <option class="select_dist_14" value="14">14</option>
                                        <option class="select_dist_15" value="15">15</option>
                                    </select>
                                    <span asp-validation-for="@Model.Destreza"></span>
                                </div>

                                <div class="m-auto text-center">
                                    <p class="lead">Constituição</p>
                                    <select onclick="atributos(this)" class="form-select w-25 m-auto select_dist" asp-for="@Model.Constituicao">
                                        <option value="">-</option>
                                        <option class="select_dist_8" value="8">8</option>
                                        <option class="select_dist_10" value="10">10</option>
                                        <option class="select_dist_12" value="12">12</option>
                                        <option class="select_dist_13" value="13">13</option>
                                        <option class="select_dist_14" value="14">14</option>
                                        <option class="select_dist_15" value="15">15</option>
                                    </select>
                                    <span asp-validation-for="@Model.Constituicao"></span>
                                </div>

                                <div class="m-auto text-center">
                                    <p class="lead">Inteligência</p>
                                    <select onclick="atributos(this)" class="form-select w-25 m-auto select_dist" asp-for="@Model.Inteligencia">
                                        <option value="">-</option>
